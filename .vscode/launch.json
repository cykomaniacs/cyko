{
  "version": "0.2.0",
  "configurations": [


    //+----------------------------------------------------------------------
    //| DEBUG
    //+----------------------------------------------------------------------
    { "name": "debug-x64(lldb)",
      "presentation": {
        "hidden": false,
        "group": "A.DEBUG",
        "order": 2
      },

      "type": "lldb",
      "request": "custom",
      "targetCreateCommands": [
        "target create ${workspaceFolder}/bin/debug/x64/cyko.exe"
      ],
      "processCreateCommands": [
        "settings set target.run-args value1 value2 value3",
        "process launch"
      ],

      "internalConsoleOptions": "openOnSessionStart"
    },

    { "name": "debug-x64",
      "presentation": {
        "hidden": false,
        "group": "A.DEBUG",
        "order": 1
      },

      "type":    "cppvsdbg",
      "request": "launch",
      "cwd":     "${fileDirname}",
      "program": "${workspaceFolder}/bin/debug/x64/cyko.exe", "args": [],

      "console": "internalConsole", "environment": [],
      "internalConsoleOptions": "openOnSessionStart",

      "stopAtEntry": false,
      "symbolSearchPath": "${workspaceFolder}/bin/debug/x64/",
    },

    //+----------------------------------------------------------------------
    //| CLEAN
    //+----------------------------------------------------------------------

    { "name": "nuke!",
      "presentation": {
        "hidden": false,
        "group": "X.NUKE.A",
        "order": 0
      },

      "type":    "PowerShell",
      "request": "launch",
      "cwd":     "${workspaceFolder}",
      "script":  "./nuke.ps1", "args": [
        "-base", "'./bin'",
        "-name", "'debug', 'release'",
        "-arch", "'x86', 'x64'"
      ],

      "createTemporaryIntegratedConsole": false,
    },
    { "name": "nuke:debug",
      "presentation": {
        "hidden": false,
        "group": "X.NUKE.B",
        "order": 1
      },

      "type":    "PowerShell",
