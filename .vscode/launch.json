      "cwd":     "${workspaceFolder}",
      "script":  "./nuke.ps1", "args": [
        "-base", "'./bin'",
        "-name", "'debug'",
        "-arch", "'x86','x64'"
      ],

      "createTemporaryIntegratedConsole": false,
    },
    { "name": "nuke:debug:x86",
